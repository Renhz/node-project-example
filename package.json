{
  "name": "node-project-example",
  "version": "1.0.0",
  "description": "node app project example in typescript with package manager, dockerfile, ci script, semantic-release and lint set",
  "main": "index.js",
  "scripts": {
    "develop": "DEBUG=*,-nodemon* nodemon src/index.ts",
    "build": "rm -rf dist && tsc -p tsconfig.prod.json",
    "start": "node -r ./tsconfig-paths-bootstrap.js dist/index.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Renhz/node-project-example.git"
  },
  "license": "UNLICENSED",
  "private": true,
  "bugs": {
    "url": "https://github.com/Renhz/node-project-example/issues"
  },
  "homepage": "https://github.com/Renhz/node-project-example#readme",
  "packageManager": "yarn@3.6.1",
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^18.15.0",
    "jest": "^29.6.1",
    "nock": "^13.3.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "tsc": "^2.0.4",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "tsconfig-paths": "^4.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "moduleNameMapper": {
      "~/(.*)": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.(js)$": "babel-jest"
    }
  }
}
